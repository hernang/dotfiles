<h1>Nuevo Articulo</h1>

<%= form_for :articles, url: articles_path do |f| %>

	<p>
    <%= f.label :titulo %><br>
    <%= f.text_field :title %>
  	</p>

  	<p>
    <%= f.label :texto %><br>
    <%= f.text_area :text %>
  	</p>

  	<p>
    <%= f.submit %>
  	</p>

	
<% end %>

<%= link_to 'Regresar', articles_path %>